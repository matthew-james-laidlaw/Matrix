{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 29,
        "patch": 3
    },
    "configurePresets": [
        { "name": "base", "hidden": true, "binaryDir": "${sourceDir}/build/${presetName}" },
        {
            "name": "macos-base",
            "hidden": true,
            "inherits": "base",
            "generator": "Xcode",
            "condition":
            {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "linux-base",
            "hidden": true,
            "inherits": "base",
            "generator": "Ninja Multi-Config",
            "condition":
            {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "windows-base",
            "hidden": true,
            "inherits": "base",
            "generator": "Visual Studio 17 2022",
            "condition":
            {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ],
    "buildPresets": [
        { "name": "base", "hidden": true, "jobs": 8 },
        { "name": "debug-base",   "hidden": true, "configuration": "Debug"   },
        { "name": "release-base", "hidden": true, "configuration": "Release" }
    ],
    "testPresets": [
        {
            "name": "base",
            "hidden": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ]
}
